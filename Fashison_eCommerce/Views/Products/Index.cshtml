@model IEnumerable<Fashison_eCommerce.Models.Product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product_Type.Name)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Type.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Product_ID.Trim() }) |
                @Html.ActionLink("Details", "Details", new { id=item.Product_ID.Trim() }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Product_ID.Trim() })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
